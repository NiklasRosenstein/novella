
import os

template "mkdocs"

action "mkdocs-update-config" {
  site_name = "Novella"
  update '$.theme.features' add: ['navigation.sections']
  update '$.theme.palette' set: {'scheme': 'slate', 'primary': 'red', 'accent': 'deep orange'}
}

action "preprocess-markdown" {
  use "pydoc"
  if os.getenv('GITHUB_JOB'):
    preprocessor "anchor" {
      flavor.prefix = "novella/"
    }
}
